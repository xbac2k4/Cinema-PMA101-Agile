<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".view.fragment.FragmentProfile"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--        <data>-->
    <!--            <variable-->
    <!--                name="Main"-->
    <!--                type="" />-->
    <!--        </data>-->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/bgr_avatar"
            android:layout_gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="1000dp">
                <ImageView
                    android:id="@+id/img_avt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/bgr_avatar"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:text="User"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp">
            <RelativeLayout
                android:id="@+id/layout_tt_taikhoan"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="visible"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_profile"
                    android:drawablePadding="10dp"
                    android:text="Thông tin tài khoản"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_right_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2.1dp"
                android:background="@drawable/line"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RelativeLayout
                android:id="@+id/layout_doi_mk"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="visible"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_change_pw"
                    android:drawablePadding="10dp"
                    android:text="Đổi mật khẩu"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_right_arrow"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2.1dp"
                android:background="@drawable/line"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <RelativeLayout
                android:id="@+id/layout_dangxuat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:visibility="visible"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_logout"
                    android:drawablePadding="10dp"
                    android:text="Đăng xuất"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2.1dp"
                android:background="@drawable/line"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>
</layout>