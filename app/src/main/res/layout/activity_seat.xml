<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/main">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/black"
        app:title="CINEMA NhÃ³m 5 Agile"
        app:subtitle="P01  06/06/2004  10:00 PM"
        android:layout_alignParentTop="true"
        android:background="#00000000"/>
    <RelativeLayout
        android:id="@+id/screen"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_screen"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="SCREEN"/>
    </RelativeLayout>
    <!-- Layout for seat selection -->
<!--    <GridLayout-->
<!--        android:id="@+id/gridLayout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:rowCount="11"-->
<!--        android:padding="5dp"-->
<!--        android:columnCount="9"-->
<!--        android:alignmentMode="alignMargins"-->
<!--        android:columnOrderPreserved="false" />-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_seat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screen"
        tools:listitem="@layout/item_seat"
        app:spanCount="8"
        tools:itemCount="88"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:clipToPadding="false"
        android:padding="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:gravity="center"
        android:layout_below="@+id/rcv_seat">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="A1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/bgr_seat_availible"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Available"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp">
            <TextView
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="A1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/bgr_seat_selected"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Selected"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="A1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/bgr_seat_booked"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Booked"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bgr_btn_login"
        android:text="BOOK"/>

</RelativeLayout>
